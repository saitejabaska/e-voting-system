<html>

<head>
  <title><%= %>Online Voting Platform</title>
  <meta name="csrf-token" content="<%= csrf %>" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <script>
    function showHideDiv(ele) {
         	var srcElement = document.getElementById(ele);
         	if (srcElement != null) {
         		if (srcElement.style.display == "block") {
         			srcElement.style.display = 'none';
         		}
         		else {
         			srcElement.style.display = 'block';
         		}
         		return false;
         	}
         }
    // end election API
    function endElection(id) {
      var token = document
        .querySelector('meta[name="csrf-token"]')
        .getAttribute("content");

      fetch(`/election/${id}/end`, {
        method: "PUT",
        _csrf: "<%= csrf%>",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({
          _csrf: token
        })
      }).then((res) => {
        if (res.ok) {
          window.location.reload();
        }
      });
    }

    //delete voter
    function deleteVoter(electionID, id) {
      var token = document
        .querySelector('meta[name="csrf-token"]')
        .getAttribute("content");

      fetch(`/election/${electionID}/voter/${id}/delete`, {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({
          _csrf: token
        })
      }).then(res => {
        if (res.ok) {
          window.location.reload();
        }
      })
    }
  </script>
  <style>
    .button {
  background-color: #10990b; /* Green */
  border: none;
  color: white;
  padding: 10px 10px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 16px;
  margin: 4px 2px;
  cursor: pointer;
  -webkit-transition-duration: 0.4s; /* Safari */
  transition-duration: 0.4s;
  width: 250px;
  margin-left: 30%;
}
.button2:hover {
  box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24),0 17px 50px 0 rgba(0,0,0,0.19);
}
  </style>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
</head>

<body style="background-color: white;">
  <%- include ('updatedHeader', {username: username}) %>

  <div class="flex flex-col justify-center items-center p-4">
    <div class="flex flex-col justify-center md:w-2/5 w-full">
      <hr />

      <% if (election.ended) { %>
      <!-- Election ended banner -->
      <div class="flex justify-center items-center mt-4 p-2 rounded-lg bg-red-400 border-2 border-red-500 gap-2 text-white font-bold">
        <i class="fa fa-exclamation-triangle"></i> Election Ended
      </div>
      <% } else if (election.launched) { %>
      <!-- Election live banner -->
      <div class="flex justify-center items-center mt-4 p-2 rounded-lg bg-blue-500 border-2 border-blue-700 gap-2 text-white font-bold">
        <i class="fa fa-exclamation-triangle"></i> Election is Live
      </div>
      <% } %>

      <div class="flex flex-col md:flex-row justify-between gap-4 pt-4">
        <div>
          <div class="flex gap-2">
            <p class="text-4xl font-semibold"><%= election.name %></p>
            <% if (!election.launched) { %>
            <a class="flex items-center hover:text-blue-600" href="/election/<%= election.id %>/edit"><i class="fa fa-edit"></i></a>
            <% } %>
          </div>
          <p class="text-xl text-gray-500">
            <%= questions.length %> Questions
          </p>
          <p class="text-xl text-gray-500"><%= voters.length %> Voters</p>
        </div>
        <div class="flex gap-4 items-center">
          <% if (!election.ended) { %> <% if (!election.launched) { %>
          <div class="flex flex-col md:flex-row gap-4">
            <!-- Preview Link -->
            <a class="p-1 flex gap-2 items-center rounded-lg bg-green-600 border-2 border-green-800 hover:bg-green-700 text-white font-bold px-4" href="/election/<%= election.id %>/preview"><i class="fa fa-eye"></i> Preview</a>
            <!-- Launch Button -->
            <a href="/election/<%= election.id %>/launch" class="p-1 flex gap-2 items-center rounded-lg bg-green-600 border-2 border-green-800 hover:bg-green-700 text-white font-bold px-4">
              <i class="fa fa-tags"></i> Launch
            </a>
          </div>
          <% } else { %>
          <div class="flex flex-col md:flex-row gap-4">
            <!-- Public Link Button -->
            <a target="_blank" href="/election/<%= election.id %>/vote" class="p-1 flex gap-2 items-center rounded-lg bg-purple-600 border-2 border-purple-800 hover:bg-purple-700 text-white font-bold px-4">
              <i class="fa fa-external-link"></i> Public Link
            </a>
            <!-- Result Link -->
            <a href="/election/<%= election.id %>/result" class="p-1 flex gap-2 items-center rounded-lg bg-green-600 border-2 border-green-800 hover:bg-green-700 text-white font-bold px-4">
              <i class="fa fa-list-alt"></i> Result
            </a>
            <!-- End Link -->
            <button onclick="endElection('<%= election.id %>')" class="p-1 flex gap-2 items-center rounded-lg bg-red-600 border-2 border-red-800 hover:bg-red-700 text-white font-bold px-4">
              <i class="fa fa-flag-checkered"></i> End
            </button>

          </div>
          <% } %> <% } else { %>
          <!-- Result Button -->
          <a class="p-1 flex gap-2 items-center rounded-lg bg-green-600 border-2 border-green-800 hover:bg-green-700 text-white font-bold px-4" href="/election/<%= election.id %>/result"><i class="fa fa-list-alt"></i> Result</a>
          <% } %>
        </div>
      </div>

      <!-- flash message -->
      <div class="flex flex-col justify-center items-center gap-3 pt-4">
        <% if (messages && messages.launch && messages.launch.length > 0) { %>
        <% for(var i=0; i<messages.launch.length; i++) {%>
        <div class="bg-red-300 text-red-900 font-semibold p-2 rounded-lg shadow"> <%= messages.launch[i] %></div>
        <% } %>
        <% } %>
      </div>
      
      
      <button class="button button2" onClick="showHideDiv('divMsg1')">Manage Questions</button>
      <br><br>
      <!-- Add new question -->
     <div id="divMsg1" style="display: none;">
      <% if (!election.launched) { %>
      <p class="text-black text-xl pt-6">Add Question</p>
      <div>
        <form action="/election/<%= election.id %>/questions/add" method="post" class="flex flex-col md:flex-row gap-4 pt-2">
          <input type="hidden" value="<%= csrf %>" name="_csrf">
          <div class="flex flex-col">
            <input type="text" name="title" placeholder="Title" class="border-2 border-black p-2 rounded-lg" />
          </div>
          <div class="flex flex-col">
            <input type="text" name="description" placeholder="Description" class="border-2 border-black p-2 rounded-lg" />
          </div>
          <div class="flex justify-center items-center">
            <button type="submit" class="bg-green-400 transition duration-200 border-2 border-black p-2 rounded-lg hover:bg-green-600 px-6">
              Add
            </button>
          </div>
        </form>
      </div>

      <!-- flash message -->
      <div class="flex flex-col justify-center items-center gap-3 pt-4">
        <% if (messages && messages.error && messages.error.length > 0) { %>
        <% for(var i=0; i<messages.error.length; i++) {%>
        <div class="bg-red-300 text-red-900 font-semibold p-2 rounded-lg shadow"> <%= messages.error[i] %></div>
        <% } %>
        <% } %>
      </div>
      <% } %>

      <!-- List of Questions -->
      <p class="font-semibold pt-4 text-xl">Questions</p>
      <%- include ('questionList.ejs', {questions: questions, election:
        election}) %>
     </div>
      <!-- Voter Section -->
      <button class="button button2" onClick="showHideDiv('divMsg')">Manage Voters</button>
      <div id="divMsg" style="display: none;">
        <!-- Add New Voter if election not ended -->
        <% if (!election.ended) { %>
        <p class="text-xl">Add Voter</p>
        <form action="/election/<%= election.id %>/voters/add" method="post" class="flex flex-col md:flex-row gap-4 pt-2">
          <input type="hidden" name="_csrf" value="<%= csrf %>">
          <div class="flex flex-col">
            <input type="text" name="voterID" placeholder="Voter ID" class="border-2 border-black p-2 rounded-lg" />
          </div>
          <div class="flex flex-col">
            <input type="password" name="password" placeholder="Password" class="border-2 border-black p-2 rounded-lg" />
          </div>
          <div class="flex justify-center items-center">
            <button type="submit" class="bg-green-400 transition duration-200 border-2 border-black p-2 rounded-lg hover:bg-green-600 px-6">
              Add
            </button>
          </div>
        </form>
        <% } %>

        <!-- flash message -->
        <div class="flex flex-col justify-center items-center gap-3 pt-4">
          <% if (messages && messages.voterError && messages.voterError.length > 0) { %>
          <% for(var i=0; i<messages.voterError.length; i++) {%>
          <div class="bg-red-300 text-red-900 font-semibold p-2 rounded-lg shadow"> <%= messages.voterError[i] %></div>
          <% } %>
          <% } %>
        </div>

        <!-- List of Voters -->
        <p class="font-semibold pt-4 text-xl">Voters</p>
        <% if (voters.length === 0) { %>
        <h1 class="text-2xl flex justify-center text-gray-600 font-semibold">No voters yet</h1>
        <% } %>
        <div class="flex flex-col justify-center items-center p-4">
          <div class="flex flex-col gap-4 justify-center w-full p-4">
            
            <% for (var i=0; i<voters.length; i++) { %>
            <div class="flex justify-between gap-6">
              <li class="text-xl"><%= voters[i].voterID %></li>
              <% if (!election.ended) { %>
              <div class="flex gap-4 justify-center items-center">
                <% if (voters[i].voted) { %>
                <div class="text-gray-600"><i class="fa fa-check"></i> Voted</div>
                <% } else { %>
                <div onclick="deleteVoter('<%= election.id %>', '<%= voters[i].id %>')" style="color:blue"><u>Delete Voter</u></div>
                <% } %>
                <!-- <div onclick="deleteElection('<%= voters[i].id %>')"><i class="cursor-pointer fa fa-trash hover:text-red-500 transition duration-200"></i></div> -->
              </div>
              <% } %>
            </div>
            <% } %>
          </div>
        </div>

      </div>
    </div>
  </div>
</body>

</html>